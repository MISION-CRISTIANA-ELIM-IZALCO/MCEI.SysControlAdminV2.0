@model MCEI.SysControlAdmin.EN.MembershipHistory___EN.MembershipHistory

@{
    ViewData["Title"] = "Detalles Historial Membresia";
}

<br />
<h1>Formulario Detalles De Historial Membresía</h1>
<hr />
<br />

<div class="container">
    <div class="row">
        <!-- Columna de información personal -->
        <div class="col-md-8">
            <h3>Información Personal</h3>
            <br />
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LastName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Dui)</dt>
                <dd class="col-sm-8">
                    @(Model.Dui != null ? Model.Dui : "Menor de Edad")
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateOfBirth)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfBirthFormatted)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Age)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Age) Años</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Gender)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CivilStatus)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CivilStatus)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Phone)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Address)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProfessionOrStudy)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProfessionOrStudy)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PlaceOfWorkOrStudy)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PlaceOfWorkOrStudy)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.WorkOrStudyPhone)</dt>
                <dd class="col-sm-8">
                    @(Model.WorkOrStudyPhone != null ? Model.WorkOrStudyPhone : "Vacio")
                </dd>
            </dl>
            <h3>Información Del Conyugue</h3>
            <br />
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NameOfSpouse)</dt>
                <dd class="col-sm-8">
                    @(Model.NameOfSpouse != null ? Model.NameOfSpouse : "Vacio")
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LastNameOfSpouse)</dt>
                <dd class="col-sm-8">
                    @(Model.LastNameOfSpouse != null ? Model.LastNameOfSpouse : "Vacio")
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateOfBirthOfSpouse)</dt>
                <dd class="col-sm-8">
                    @(Model.DateOfBirthOfSpouseFormatted != null ? Model.DateOfBirthOfSpouseFormatted : "Vacio")
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AgeOfSpouse)</dt>
                <dd class="col-sm-8">
                    @(Model.AgeOfSpouse != null ? Model.AgeOfSpouse : "Vacio") Años
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.GenderOfSpouse)</dt>
                <dd class="col-sm-8">
                    @(Model.GenderOfSpouse != null ? Model.GenderOfSpouse : "Vacio")
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PhoneOfSpouse)</dt>
                <dd class="col-sm-8">
                    @(Model.PhoneOfSpouse != null ? Model.PhoneOfSpouse : "Vacio")
                </dd>

            </dl>
        </div>

        <!-- Columna de la imagen -->
        <div class="col-md-4 text-center">
            <h5>Fotografía</h5>
            <br />
            <img id="imagenPreview"
                 src="@(ViewBag.ImageUrl != null ? "data:image/jpeg;base64," + ViewBag.ImageUrl : "https://via.placeholder.com/200")"
                 alt="Imagen del miembro"
                 class="img-thumbnail img-fluid"
                 style="max-width: 100%; max-height: 250px;" />
        </div>
    </div>

    <!-- Sección de información complementaria -->
    <div class="row">
        <div class="col-md-6">
            <br />
            <h3>Información Complementaria</h3>
            <br />
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ConversionDate)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ConversionDateFormatted)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PlaceOfConversion)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PlaceOfConversion)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.WaterBaptism)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.WaterBaptism)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.BaptismOfTheHolySpirit)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BaptismOfTheHolySpirit)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PastorsName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PastorsName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SupervisorsName)</dt>
                <dd class="col-sm-8">
                    @(Model.SupervisorsName != null ? Model.SupervisorsName : "Vacío")
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LeadersName)</dt>
                <dd class="col-sm-8">
                    @(Model.LeadersName != null ? Model.LeadersName : "Vacío")
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TimeToGather)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TimeToGather)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Zone)</dt>
                <dd class="col-sm-8">
                    @(Model.Zone != null ? Model.Zone : "Vacío")
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.District)</dt>
                <dd class="col-sm-8">
                    @(Model.District != null ? Model.District : "Vacío")
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Sector)</dt>
                @if (Model.Sector != "0")
                {
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Sector)</dd>
                }
                else if (Model.Sector == "0")
                {
                    <dd class="col-sm-8">SOY SUPERVISOR</dd>
                }

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cell)</dt>
                @if (Model.Cell != "0")
                {
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cell)</dd>
                }
                else if (Model.Sector == "0" && Model.Cell == "0")
                {
                    <dd class="col-sm-8">
                        SOY SUPERVISOR
                    </dd>
                }
                else if (Model.Sector != "0" && Model.Cell == "0")
                {
                    <dd class="col-sm-8">
                        SOY LIDER
                    </dd>
                }

            </dl>
        </div>

        <div class="col-md-6">
            <br />
            <h3>Información Adicional</h3>
            <br />
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.InternalIdentityCode)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.InternalIdentityCode)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-8">
                    @(Model.Status == 1 ? "ACTIVO" : "INACTIVO")
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CommentsOrObservations)</dt>
                <dd class="col-sm-8">
                    @(Model.CommentsOrObservations != null ? Model.CommentsOrObservations : "Vacío")
                </dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateCreated)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DateCreatedFormatted) - @Html.DisplayFor(model => model.TimeCreatedFormatted)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateModification)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DateModificationFormatted) - @Html.DisplayFor(model => model.TimeModificationFormatted)</dd>
            </dl>
        </div>
    </div>

    <br />

    <div>
        <a class="btn btn-outline-secondary" asp-action="Index">Regresar a la Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}