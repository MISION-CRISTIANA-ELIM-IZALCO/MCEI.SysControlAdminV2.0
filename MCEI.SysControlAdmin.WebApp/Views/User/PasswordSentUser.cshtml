@{
    ViewData["Title"] = "Contraseña Enviada";
}

@section Scripts {
    <script>
        Swal.fire({
            title: '¡Contraseña Actualizada!',
            html: `
                <h3>¡Correo Enviado Exitosamente!</h3>
                <p>Tu contraseña temporal ha sido enviada al correo proporcionado.</p>
                <p>Revisa tu bandeja de entrada para obtenerla y acceder a tu cuenta.</p>
            `,
            icon: 'success',
            showConfirmButton: true,
            confirmButtonText: 'Regresar al Inicio',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Home/Index';
            }
        });
    </script>
}
